{
  "name": "xapi-url-shortener",
  "version": "0.0.0-development",
  "description": "An xAPI URL shortenenr",
  "main": "dist/presenter/express/server.js",
  "typings": "dist/presenter/express/server.d.ts",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LearningLocker/url-shortener.git"
  },
  "files": [
    "dist",
    ".env.example",
    "package-lock.json"
  ],
  "scripts": {
    "acp": "git add -A && npm run commit && git push",
    "commit": "git-cz",
    "build": "tsc",
    "start": "node dist/presenter/express/server.js",
    "test": "mocha $(find dist -name '*.test.js') --timeout 6000 --exit",
    "cover": "nyc --lines 100 --check-coverage --exclude '(dist/utils/config.js)' npm run test",
    "clean": "rimraf dist",
    "rollback": "node dist/rollback.js",
    "migrate": "node dist/migrate.js",
    "lint": "tslint -p ./tsconfig.json",
    "duplication": "jscpd",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "bin": {
    "xus": "./bin/xus.js"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "btoa": "^1.1.2",
    "commander": "^2.11.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "iplocation": "^5.0.0",
    "jscommons": "^1.0.1",
    "knex": "^0.13.0",
    "mysql": "^2.14.1",
    "node-fetch": "^1.7.3",
    "ramda": "^0.25.0",
    "request-ip": "^2.0.2",
    "source-map-support": "^0.5.0",
    "useragent": "^2.2.1"
  },
  "devDependencies": {
    "@types/commander": "2.11.0",
    "@types/dotenv": "4.0.2",
    "@types/express": "4.0.37",
    "@types/knex": "0.0.63",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.46",
    "@types/node-fetch": "1.6.7",
    "@types/ramda": "0.24.17",
    "@types/request-ip": "0.0.31",
    "@types/source-map-support": "0.4.0",
    "@types/supertest": "2.0.3",
    "@types/useragent": "2.1.1",
    "@types/winston": "2.3.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "jscpd": "0.6.15",
    "mocha": "4.0.1",
    "nyc": "11.2.1",
    "rimraf": "2.6.2",
    "semantic-release": "8.2.0",
    "supertest": "3.0.0",
    "tslint": "5.8.0",
    "tslint-consistent-codestyle": "1.8.0",
    "tslint-immutable": "4.4.0",
    "typescript": "2.5.3"
  }
}
